{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "PTSL",
    "scopeName": "source.ptsl",
    "patterns": [
        {
            "match": "^\\s*//.*$",
            "name": "comment.line.double-slash.ptsl"
        },
        {
            "match": "\\b(true|false)\\b",
            "name": "constant.language.boolean.ptsl"
        },
        {
            "match": "\\b\\d+\\b",
            "name": "constant.numeric.ptsl"
        },
        {
            "match": "\\b\\d+\\.\\d+\\b",
            "name": "constant.numeric.float.ptsl"
        },
        {
            "match": "\\b(launchTarget|propel|repeat|stat|globalstat|chat|if|random|tp|applyLayout|applyPotion|actionBar|cancelEvent|changeHealth|changePlayerGroup|clearEffects|title|fullHeal|kill|sound|resetInventory|gamemode|hungerLevel|maxHealth|function|displayMenu|closeMenu|pause|else|exit)\\b",
            "name": "keyword.control.ptsl"
        },
        {
            "match": "\\b(increment|decrement|set|multiply|divide|inc|dec|mult|div|\\+=|-=|=|\\*=|/=|//=)\\b",
            "name": "keyword.operator.ptsl"
        },
        {
            "match": "(?<=\\b(stat|globalstat|health|maxHealth|hunger)\\s+\\w+\\s*)>=|==|<=|!=|>|<|=>|=<",
            "name": "keyword.operator.comparison.ptsl"
        },
        {
            "match": "\\b(and|or|)\\b",
            "name": "keyword.operator.logical.ptsl"
        },
        {
            "begin": "\"",
            "end": "\"",
            "name": "string.quoted.double.ptsl"
        },
        {
            "match": "\\b(stat|globalstat|gamemode|hasPotion|inRegion|hasPermission|hasGroup|isSneaking|isGliding|health|maxHealth|hunger|damageAmount|placeholder|isFlying|)\\b",
            "name": "support.function.ptsl"
        }
    ]
}